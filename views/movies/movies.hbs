<div class="container">

    <h2>All movies</h2>

    <hr>

    <ul>
        {{#each movies}}
        <li>
            <p>{{title}}</p>
            <a href="/movies/{{id}}">Details</a>
            <a href="/movies/{{id}}/edit">Edit</a>
            <form action="/movies/{{_id}}/delete" method="POST">
                <button class="btn btn-sm btn-warning" type="submit">Delete</button>
            </form>
        </li>
        {{/each}}
    </ul>

    <hr>

    <a href="/" class="btn btn-dark">Back to home</a>

</div>